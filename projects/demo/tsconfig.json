{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/app",
    "paths": {
      "@moj/moj-ng": [
        "projects/moj-ng/"
      ],
      "@moj/moj-ng/*": [
        "projects/moj-ng/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "projects/moj-ng/**/*"
],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts",
    "projects/moj-ng/**/*.spec.ts"
  ]
}